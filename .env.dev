# Local Development Configuration
CHANNELS_API_URL=http://192.168.3.150:8089
USE_POLLING=true
USE_WEBHOOK=false
DRY_RUN=false

# Local testing: Scans test-recordings/ instead of live API
# Workflow: Keep files in test-recordings/tmp/, copy to test-recordings/TV/ShowName/ to trigger
LOCAL_TEST_DIR=/recordings

POLL_INTERVAL_SECONDS=120
POLL_MAX_AGE_HOURS=2
LOG_VERBOSITY=VERBOSE

# Caption command - Python-based Whisper + embed pipeline
# The pipeline will auto-construct the full command with proper arguments
CAPTION_COMMAND=python3 -m py_captions_for_channels.embed_captions "{path}"
