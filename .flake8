[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    env.*,
    docs/copilot/*.docx,
    docs/copilot/*.doc,
    .github,
    build,
    dist,
    site-packages,
    scripts/performance_report.py,
    scripts/sync_env_from_example.py,
    export_performance_csv.py,
    quick_report.py,
    simple_report.py,
    test_api_monitor.py,
    test_system_monitor.py,
    check_*.py
